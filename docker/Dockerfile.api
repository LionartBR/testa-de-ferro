FROM python:3.12-slim

RUN groupadd -r app && useradd -r -g app app

WORKDIR /app

# Copy source first (setuptools needs packages for auto-discovery)
COPY pyproject.toml .
COPY api/ ./api/
COPY pipeline/ ./pipeline/

# Install dependencies
RUN pip install --no-cache-dir .

USER app

EXPOSE 8000

CMD ["uvicorn", "api.interfaces.api.main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "4"]
