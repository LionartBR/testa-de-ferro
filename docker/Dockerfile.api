FROM python:3.12-slim

RUN groupadd -r app && useradd -r -g app app

WORKDIR /app

COPY pyproject.toml .
RUN pip install --no-cache-dir . && pip install --no-cache-dir ".[pdf]"

COPY api/ ./api/

USER app

EXPOSE 8000

CMD ["uvicorn", "api.interfaces.api.main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "4"]
